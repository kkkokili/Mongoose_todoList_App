<%- include('header'); -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% for (i=0; i< arraylist.length; i++) { %>
  <form class="" action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name ="checkbox" onChange="this.form.submit()" value="<%= arraylist[i]._id %>">
      <input type="hidden" name="listname" value="<%= listTitle %>">
      <p class="item"><%= arraylist[i].name %></p>
    </div>
  </form>
  <% } %>

  <form class="item" action="/" method="post">
    <input type="text" name="task" placeholder="New item" autocomplete="off">
    <button type="submit" name="button" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include('footer'); -%>
